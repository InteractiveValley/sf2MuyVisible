{% extends "FrontendBundle::layout.html.twig" %}

{% set urlAbsoluta = 'http://' ~ app.request.server.get('SERVER_NAME') %}

{% set urlAbsolutaFoto = urlAbsoluta ~ asset('images/logo.png') %}
                                
{% block redes_sociales %}
    <meta property="og:type" content="article" />
    <meta property="og:title" content="{{publicacion.title}}" />
    <meta property="og:url" content="{{url('publicacion',{'slug':publicacion.slug})}}" />
    <meta property="og:locale" content="es_ES">
    <meta property="og:description" content="{{publicacion.resume}}">
    {% if publicacion.image | length > 0 %}
    <meta property="og:image" content="{{ (publicacion.webPath | imagine_filter('image_social') )}}" />
    {% else %}
    <meta property="og:image" content="{{ urlAbsolutaFoto }}" />
    {% endif %}    
    <meta property="og:site_name" content="muyvisible.com">
    <!--meta property="fb:app_id" content="123388861116012"-->
    <!--meta property="fb:admins" content="100000062710915"-->
    <meta property="article:published_time" content="{{publicacion.createdAt|date('c')}}">
    <meta property="article:modified_time" content="{{publicacion.updatedAt|date('c')}}">
    <!--meta property="article:publisher" content="https://www.facebook.com/MuyVisible"-->
    <meta property="article:section" content="MuyVisible">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{publicacion.title}}">
    <meta name="twitter:description" content="{{publicacion.resume}}">
    <meta name="twitter:url" content="{{url('publicacion',{'slug':publicacion.slug})}}">
    <meta name="twitter:site" content="@MuyVisible">
    {% if publicacion.image | length > 0 %}
    <meta property="og:image" content="{{ (publicacion.webPath | imagine_filter('image_social') )}}" />
    {% else %}
    <meta property="og:image" content="{{ urlAbsolutaFoto }}" />
    {% endif %}
    <meta name="twitter:domain" content="muyvisible.com">
    
    <meta itemprop="name" content="{{publicacion.title}}">
    <meta itemprop="description" content="{{publicacion.resume}}">
    {% if publicacion.image | length > 0 %}
    <meta itemprop="image" content="{{ (publicacion.webPath | imagine_filter('image_social') )}}" />
    {% else %}
    <meta itemprop="image" content="{{ urlAbsolutaFoto }}" />
    {% endif %}
    
    <meta name="pubexchange:headline" content="{{publicacion.title}}">
    <meta name="pubexchange:description" content="{{publicacion.resume}}">
    {% if publicacion.image | length > 0 %}
    <meta name="pubexchange:image" content="{{ (publicacion.webPath | imagine_filter('image_social') )}}" />
    {% else %}
    <meta name="pubexchange:image" content="{{ urlAbsolutaFoto }}" />
    {% endif %}
{% endblock %}    

{% block class_body ' class="noticias"' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="screen" href="{{asset('css/muyvisible/publicacion.css')}}"/>
{% endblock %}

{% block body %}
    {% if publicacion.image | length > 0 %}
        <header class="head_noticias">
            <div class="publicidad_head"><img src="/images/banner1.png" alt=""></div>
            <figure><a href="{{path('homepage')}}"><img src="/images/muyvisible_mini_logo.png" alt=""></a></figure>
        </header>
        <section>
            <figure class="img_cabezera">
                <img src="{{publicacion.webPath}}" alt="">
            </figure>
        </section>
    {% else %}
        <header class="head_noticias no-fixed">
            <div class="publicidad_head"><img src="/images/banner1.png" alt=""></div>
            <figure><a href="{{path('homepage')}}"><img src="/images/muyvisible_mini_logo.png" alt=""></a></figure>
        </header>
        <div class="sin-portada"></div>   
    {% endif  %}
    <section class="cuerpo">
        <section class="central">
            <article class="contenido">
                <div class="titulo">
                    <h1>{{publicacion.title}}</h1>
                    <p class="resumen">{{publicacion.resume | raw}}</p>
                    <div class="contador">
                        <table>
                            <tr class="numero">
                                <td class="count-likes">{{publicacion.contLikes}}</td>
                                <td class="count-tweets">{{publicacion.contTwits}}</td>
                                <!--td class="count-plus">0</td-->
                                <td class="count-views">{{publicacion.contViews}}</td>
                            </tr>
                            <tr class="comentarios">
                                <td>FACEBOOK</td>
                                <td>TWEETS</td>
                                <!--td>PLUS</td-->
                                <td>VIEWS</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="contenido-publicacion">
                    {{ publicacion.description | raw }}
                </div>
                <div class="fecha">{{ publicacion.createdAt | translate_date }} | {{ publicacion.createdAt|date("G:i A") }}</div>
                <div class="sociales">
                    {% set urlPagina = url('publicacion',{'slug':publicacion.slug}) %}
                    {% set title = publicacion.title %}
                    {% set via = ' by @MuyVisible' %}
                    <a href="" class="share-bottom-btn share-bottom-fb medium button js-share-bottom-btn-social" data-service="Facebook" data-popup-width="555" data-popup-height="370"><i class="share-bottom-icon icon icon-facebook"></i>Facebook</a>
                    <span class="share">COMPARTIR</span><br>
                    <a class="compartir" href="http://www.facebook.com/sharer.php?u={{urlPagina}}&display=popup"><div class="facebook"><span class="flaticon-facebook55">FACEBOOK</span></div></a>
                    <a class="compartir" href="http://twitter.com/share?url=/&text={{title ~' ' ~ urlPagina ~ ' ' ~ via | url_encode }}"><div class="twitter"><span class="flaticon-twitter1">TWITTER</span></div></a>
                    <a href="#"><div class="shares"><span class="flaticon-share14">SHARE</span></div></a>
                </div>
                <div class="comentarios_face">Comentarios Facebook</div>
            </article>
        </section>
        <section class="derecha">
            <div class="derecha_2">
                <div class="publicidad_der"><img style="width:100%" src="/images/box.png" alt=""></div>
                <div class="sociales_2">
                    <span class="share">COMPARTIR</span><br><br>
                    <a class="compartir" href="http://www.facebook.com/sharer.php?u={{urlPagina}}&display=popup"><div class="facebook"><span class="flaticon-facebook55">FACEBOOK</span></div></a>
                    <a class="compartir" href="http://twitter.com/share?url=/&text={{title ~' ' ~ urlPagina ~ ' ' ~ via | url_encode }}"><div class="twitter"><span class="flaticon-twitter1">TWITTER</span></div></a>
                    <a href="#"><div class="shares"><span class="flaticon-share14">SHARE</span></div></a>
                </div>
                <div class="sociales_2">
                    <span class="share">VINCULO DE PUBLICACION</span><br><br>
                    <input type="text" value="{{url('publicacion',{'slug':publicacion.slug})}}">
                    <div class="copy"><a href="#">COPIAR</a></div>
                    <a href="#">
                        <div class="mas_notas">
                            <img src="/images/lentes.png" alt="">
                            Ver m√°s NOTAS
                        </div>
                    </a>
                </div>
            </div>
        </section>
    </section>

    <footer></footer>
    {% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $(window).scroll(function () {
                if ($(window).scrollTop() > 620){
                    $("header").fadeOut();
                }else{
                    $("header").fadeIn();
                }
                if ($(window).scrollTop() > 745){
                    $(".derecha_2").addClass('fijo');
                }else{
                    $(".derecha_2").removeClass('fijo');
                }
                posicionarMenu();
            });
            
            $('.compartir').on('click',function(e){
               e.preventDefault();
               e.stopPropagation();
               window.open($(this).attr('href'),'','width=600,height=400,left=50,top=50,toolbar=yes');
               return false;
            });
            
            posicionarMenu();
        });
        function posicionarMenu() {
            var altura_del_header = $('header').outerHeight(true);
            var altura_del_menu = $('header').outerHeight(true);

            if ($(window).scrollTop() >= 0){
                $('header').addClass('fixed');
                $('.img_cabezera').css('margin-top', (altura_del_menu) + 'px');
            } else {
                $('header').removeClass('fixed');
                $('.img_cabezera').css('margin-top', '0');
            }
        }
    </script>
{% endblock %}
